<% provide(:title, @user.name) %>

<div class="row">
  <aside class="span4">
  	<%= render 'shared/flashes' %>
    <section>
      <h1>
        <%= image_tag @user.picture.url %>
        <%= @user.name %>
        <% if current_user == @user %>
        <%= link_to "Edit My Profile", edit_user_path(@user) %>
        <% end %>
        <%= render 'follow_form' %>
      </h1>
    </section>
    <section>
    	<%= render 'shared/stats' %>
    </section>
  </aside>
</div>


  <div class="center hero-unit">
  <% @wants.each do |item| %>
    <p><% my_wants = Item.find(item.item_id) %><p>
     <p><%= link_to "#{my_wants.content}", personal_item_user_path(@user, item) %><p>
      <% unless @user != current_user %>
     <p><%= link_to "Delete", want_path(item), method: :delete %><p>
      <% end %>
     <% if item.status == 0 %>
        
        <p><%= "Not done" %> </p>
       <% else %>
       <p><%= "Done!" %> </p>
       <% end %>

  <% end %>
</div>

<p>Find me in app/views/users/show.html.erb</p>

